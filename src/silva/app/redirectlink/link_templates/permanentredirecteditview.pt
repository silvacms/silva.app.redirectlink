<form name="editform"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="silva">

  <div class="form-head">
    <h3 i18n:domain="silva">
      Redirect link
    </h3>
  </div>

  <div class="form-body">
    <p>
      This is the target of this link:
      <tal:broken
         tal:condition="not:view/target"
         i18n:translate="">
        is broken.
      </tal:broken>
      <tal:target tal:condition="view/target">
        <a href="#"
           tal:content="view/target/get_title_or_id">
        </a>
      </tal:target>
    </p>
  </div>

</form>
